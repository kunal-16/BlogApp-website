<!DOCTYPE html>
<html>
    <head>
        <title>BlogApp</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
        <link rel="stylesheet" href="/stylesheets/app.css">
    </head>
    <body>

<div class="ui fixed inverted menu">
    <div class="ui container">
        <div class="header item"><i class="code icon"></i> Blog Site</div>
        <a href="/" class="item">Home</a>
        <a href="/blogs/new" class="item">New Post</a>
    </div>
</div>

<div class="ui main text container">
    <div class="ui huge header">RESTful BlogApp
        <div class="ui top attached segment">
            <div class="ui attached itmes">
                <%for(var i=0;i!=blogs.length;i++){%>
                    <div class="item">
                        <div class="image">
                            <img src="<%=blogs[i].image%>">
                        </div>
                        <div class="content">
                            <a class="header" href="/blogs/<%=blogs[i]._id%>"><%=blogs[i].title%></a>
                            <div class="meta">
                                <span><%=blogs[i].created.toDateString()%></span>
                            </div>
                            <div class="description"><p><%=blogs[i].body.substring(0,100)%>....</p></div>
                            <div class="extra">
                                <a class="ui floated basic violet button" href="/blogs/<%=blogs[i]._id%>">
                                    Read More
                                    <i class="chevron icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <%}%> 
            </div>
        </div>
    </div>
</div>


</body>
</html>

